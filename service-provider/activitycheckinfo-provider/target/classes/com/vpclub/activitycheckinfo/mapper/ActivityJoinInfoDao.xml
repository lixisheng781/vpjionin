<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.huake.modules.app.dao.ActivityJoinInfoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.huake.modules.app.entity.ActivityJoinInfoEntity" id="activityJoinInfoMap">
        <result property="ajiNum" column="aji_num"/>
        <result property="ubiId" column="ubi_id"/>
        <result property="abiId" column="abi_id"/>
        <result property="amiId" column="ami_id"/>
        <result property="joinTime" column="join_time"/>
        <result property="joinTimeStatus" column="join_time_status"/>
        <result property="joinType" column="join_type"/>
        <result property="joinDate" column="join_date"/>
        <result property="fileUrl" column="file_url"/>
        <result property="auditId" column="audit_id"/>
        <result property="auditContent" column="audit_content"/>
        <result property="auditName" column="audit_name"/>
        <result property="auditDate" column="audit_date"/>
    </resultMap>
	<!-- 判断是否已 报名-->
	<select id="isenlist" resultType="int">
		select count(abi_id) from activity_member_info
		where abi_id = #{abiId} 
		and ami_user_id=#{amiId}
	</select>

</mapper>